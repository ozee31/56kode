---
import { type CollectionEntry } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Main from "@layouts/Main.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Card from "@components/Card";
import Pagination from "@components/Pagination.astro";
import { SITE } from "@config";
import Hr from "@components/Hr.astro";

export interface Props {
  currentPage: number;
  totalPages: number;
  paginatedPosts: CollectionEntry<"blog">[];
  tag: string;
  tagName: string;
  techWatchPagination: {
    currentPage: number;
    totalPages: number;
    paginatedPosts: CollectionEntry<"techwatch">[];
  };
}

const {
  currentPage,
  totalPages,
  paginatedPosts,
  tag,
  tagName,
  techWatchPagination,
} = Astro.props;
---

<Layout
  title={`Tag: ${tagName} | ${SITE.title}`}
  description={`Browse all articles and tech watch posts tagged with "${tagName}". In-depth content about ${tagName} development, best practices, and insights.`}
>
  <Header activeNav="tags" />
  <Main
    pageTitle={[`Tag:`, `${tagName}`]}
    titleTransition={tag}
    pageDesc={`All the articles with the tag "${tagName}".`}
  >
    <h1 slot="title" transition:name={tag}>{`Tag:${tag}`}</h1>
    {
      paginatedPosts.length > 0 && (
        <section>
          <h2 class="text-3xl">My posts</h2>
          <ul>
            {paginatedPosts.map(({ data, id }) => (
              <Card href={`/posts/${id}/`} frontmatter={data} />
            ))}
          </ul>
        </section>
      )
    }

    {
      paginatedPosts.length > 0 &&
        techWatchPagination.paginatedPosts.length > 0 && <Hr />
    }

    {
      techWatchPagination.paginatedPosts.length > 0 && (
        <section class="mt-5">
          <h2 class="text-3xl">Tech Watch Posts</h2>
          <ul>
            {techWatchPagination.paginatedPosts.map(({ data }) => (
              <Card href={(data as any).url} frontmatter={data as any} />
            ))}
          </ul>
        </section>
      )
    }
  </Main>

  <Pagination
    {currentPage}
    {totalPages}
    prevUrl={`/tags/${tag}${
      currentPage - 1 !== 1 ? "/" + (currentPage - 1) : ""
    }/`}
    nextUrl={`/tags/${tag}/${currentPage + 1}/`}
  />

  <Footer noMarginTop={totalPages > 1} />
</Layout>
